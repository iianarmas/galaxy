#:import menu menu

MainWidget:


<MainWidget>:
    canvas.before:
        Rectangle:
            source: "images/bg.jpg"
            size: self.size
            pos: self.pos
    menu_widget: menu_widget
    perspective_point_x: self.width / 2
    perspective_point_y: self.height * 0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_name: "fonts/Eurostile.ttf"
        font_size: dp(20)
        size_hint: 0.18, 0.18
        pos_hint: {"x": 0, "top": 1}
